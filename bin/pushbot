#!/usr/bin/env php
<?php

include __DIR__ . '/../vendor/autoload.php';

use M6\Pushbot;
use M6\Pushbot\Command;

$pushbot = new Pushbot\Pushbot(
    new Pushbot\Deployment\Pool()
);

$pushbot
    ->registerCommand(Command\Status::class)
    ;

$response = $pushbot->execute(
    array_shift($argv),
    array_shift($argv),
    $argv
);

echo $response->body . PHP_EOL;

return $response->status == \M6\Pushbot\Response::SUCCESS ? 0 : 1;
